{
	"root": true,
	"extends": "plugin:@wordpress/eslint-plugin/recommended",
	"parser": "babel-eslint",
	"env": {
		"node": true,
		"browser": true,
		"jest": true
	},
	"settings": {
		"react": {
			"pragma": "createElement",
			"version": "16.3"
		}
	},
	"rules": {
		"arrow-parens": "error",
		"no-cond-assign": "off",
		"no-process-exit": "off",
		"no-restricted-globals": [ "error", "event" ],
		"react/jsx-key": "off",
		"react/jsx-no-bind": "off",
		"react/jsx-space-before-closing": "off",
		"react/jsx-tag-spacing": "error"
	}
}
